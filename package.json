{
  "name": "pci-dss-sanitizer",
  "version": "0.0.0-development",
  "description": "Mask bank card info from strings",
  "main": "lib/index.js",
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-push": "npm run check-coverage"
    }
  },
  "scripts": {
    "prebuild": "npm run lint && rimraf lib",
    "lint": "eslint --cache src/**/*.js",
    "format": "npm run lint -- --fix",
    "build": "rollup -c",
    "watch": "rollup -c --watch",
    "test": "cross-env NODE_ENV=test jest",
    "tdd": "npm run test -- --watch",
    "check-coverage": "cross-env CI=true NODE_ENV=test jest --coverage",
    "publish-coverage": "codecov",
    "commit": "git-cz",
    "semantic-release": "semantic-release",
    "travis-deploy-once": "travis-deploy-once"
  },
  "homepage": "https://github.com/skedify/pci-dss-sanitizer",
  "author": {
    "name": "Skedify",
    "email": "info@skedify.co",
    "url": "http://skedify.co"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/skedify/pci-dss-sanitizer.git"
  },
  "bugs": {
    "url": "https://github.com/skedify/pci-dss-sanitizer/issues"
  },
  "keywords": [
    "pci-dss",
    "sanitize"
  ],
  "files": [
    "lib"
  ],
  "license": "MIT",
  "dependencies": {
    "luhn": "~2.1.0",
    "multipipe": "^1.0.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^7.2.0",
    "@commitlint/config-conventional": "^7.1.2",
    "babel": "^6.23.0",
    "babel-eslint": "^7.1.1",
    "babel-plugin-syntax-trailing-function-commas": "^6.22.0",
    "babel-plugin-transform-es2015-modules-commonjs": "^6.23.0",
    "codecov": "^3.1.0",
    "commitizen": "^3.0.2",
    "cross-env": "^5.2.0",
    "cz-conventional-changelog": "^2.1.0",
    "eslint": "^5.6.1",
    "eslint-config-prettier": "^3.1.0",
    "eslint-plugin-better": "^0.1.5",
    "eslint-plugin-filenames": "^1.3.2",
    "eslint-plugin-prettier": "^3.0.0",
    "eslint-plugin-require-in-package": "^1.0.3",
    "husky": "^1.1.1",
    "jest": "^23.6.0",
    "prettier": "^1.14.3",
    "rimraf": "^2.6.2",
    "rollup": "^0.41.4",
    "rollup-plugin-babel": "^2.7.1",
    "rollup-plugin-eslint": "^5.0.0",
    "rollup-plugin-node-resolve": "^2.0.0",
    "rollup-watch": "^3.2.2",
    "semantic-release": "^15.9.17",
    "travis-deploy-once": "^5.0.9"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  }
}
