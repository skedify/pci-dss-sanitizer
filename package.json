{
  "name": "pci-dss-sanitizer",
  "version": "0.0.0-development.0",
  "description": "Mask bank card info from strings",
  "license": "MIT",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "engines": {
    "node": "16"
  },
  "peerDependencies": {},
  "scripts": {
    "start": "tsdx watch",
    "build": "tsdx build",
    "test": "tsdx test",
    "tdd": "npm run test -- --watch",
    "lint": "tsdx lint",
    "format": "npm run lint -- --fix",
    "prepare": "husky install && tsdx build",
    "size": "size-limit",
    "analyze": "size-limit --why",
    "check-coverage": "cross-env CI=true NODE_ENV=test jest --coverage",
    "publish-coverage": "codecov",
    "commit": "git-cz",
    "commit:lint-message": "commitlint --edit \"$1\"",
    "semantic-release": "semantic-release",
    "release-candidate": "npm_scripts/release-candidate.sh"
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "homepage": "https://github.com/skedify/pci-dss-sanitizer",
  "repository": {
    "type": "git",
    "url": "https://github.com/skedify/pci-dss-sanitizer.git"
  },
  "author": {
    "name": "Skedify",
    "email": "info@skedify.co",
    "url": "https://skedify.co"
  },
  "module": "dist/pci-dss-sanitizer-new.esm.js",
  "size-limit": [
    {
      "path": "dist/pci-dss-sanitizer-new.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/pci-dss-sanitizer-new.esm.js",
      "limit": "10 KB"
    }
  ],
  "keywords": [
    "pci-dss",
    "sanitize"
  ],
  "dependencies": {
    "luhn": "^2.4.1",
    "multipipe": "^4.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^7.2.0",
    "@commitlint/config-conventional": "^7.1.2",
    "@size-limit/preset-small-lib": "^4.11.0",
    "codecov": "^3.1.0",
    "commitizen": "^3.1.1",
    "cross-env": "^5.2.0",
    "cz-conventional-changelog": "^2.1.0",
    "husky": "^6.0.0",
    "semantic-release": "^17.4.3",
    "size-limit": "^4.11.0",
    "travis-deploy-once": "^5.0.9",
    "tsdx": "^0.14.1",
    "tslib": "^2.2.0",
    "typescript": "^3.9.9"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  }
}
